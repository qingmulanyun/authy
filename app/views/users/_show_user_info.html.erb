<h1><%= @user.full_name %></h1>
<table>
  <tr>
    <th>First name:</th>
    <td><%= @user.first_name %></td>
  </tr>
  <tr>
    <th>Last name:</th>
    <td><%= @user.last_name %></td>
  </tr>
  <tr>
    <th>E-Mail:</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th>Phone:</th>
    <td><%= @user.phone %></td>
  </tr>

  <tr>
    <th>
      <%= link_to "Edit", edit_user_path(@user), class:"btn btn-primary" %>
    </th>
  </tr>
</table>
